<?xml version="1.0" encoding="utf-8"?>
<!--
This drawable only for due-date form from R.layout.activity_add_form.xml.
the form accept string but only string generated by DatePicker.

the form is enable for editing by default. So to prevent manual writing of date,
its blocked with View which receive clickListener event to show DatePicker
-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorIcon">

    <item
        android:id="@android:id/mask"
        android:top="@dimen/small_margin">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</ripple>