<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="@dimen/medium_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:text="@string/dialog_title" />

        <LinearLayout
            style="@style/selectable_item_layout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_progress"
                app:tint="@color/textYellow"
                tools:ignore="contentDescription" />

            <TextView
                style="@style/TextAppearance.AppCompat.Button.selectableItemText"
                android:text="@string/progress" />
        </LinearLayout>

        <LinearLayout
            style="@style/selectable_item_layout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_done"
                app:tint="@color/textBlue"
                tools:ignore="contentDescription" />

            <TextView
                style="@style/TextAppearance.AppCompat.Button.selectableItemText"
                android:text="@string/done" />
        </LinearLayout>

        <LinearLayout
            style="@style/selectable_item_layout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                app:tint="@color/textRed"
                tools:ignore="contentDescription" />

            <TextView
                style="@style/TextAppearance.AppCompat.Button.selectableItemText"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>