<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  HomeScreen - Section styles  -->
    <style name="section_container">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="section_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="section_title" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorBlack2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--  Detail projects - header section  -->

    <style name="info_section_container">
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="section_text">
        <item name="android:textColor">@color/colorBlack2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>

    <style name="selectable_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="AppTheme.selectableItemLayout" parent="selectable_item_layout">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">@dimen/medium_margin</item>
        <item name="paddingEnd">@dimen/medium_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.selectableItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="profile_icon">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>